library ieee;
use ieee.std_logic_1164.all;

entity contador_bin is
	port (
			start			:in std_logic;
			clk			:in std_logic;
			reset_low	:in std_logic;
			ok				:out std_logic
			);
end entity;

architecture behav of contador_bin is 

--Señal de conteo.
signal cont	:integer range 0 to 10;

--Señal de busd de salida.
signal bus_out	:std_logic;


begin 


	contador: process(clk,reset_low)
	begin
		if (reset_low = '0') then 
			cont <= 0;
			bus_out <= '0';
		elsif (clk'event and clk = '1') then
			cont <= cont + 1;
			if cont = 10 then 
				cont	<= 0;
				bus_out <= '1';
			end if;
		end if;
	end process;

ok <= bus_out;	

end behav;